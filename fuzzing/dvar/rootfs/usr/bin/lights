#!/bin/sh

usage() {
    echo "Usage: $0 on|off"
    exit
}

if [[ $# -lt 1 ]]
then
    usage
fi

if [[ $1 == "on" ]]
then
#    gpio mode 0 out
#    gpio write 0 1
    echo "SIGNAL => WALK" > /dev/console
elif [[ $1 == "off" ]]
then
#    gpio mode 0 out
#    gpio write 0 0
    echo "SIGNAL => DONT WALK" > /dev/console
else
    usage
fi
